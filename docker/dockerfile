# ---- Builder Stage ----
# Use the latest slim Python 3 image and add Node.js for minification tools
FROM python:3-slim-bookworm AS builder

# Set the working directory
WORKDIR /app

# Install build essentials, Node.js, and npm for asset minification
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# Use npm to install html-minifier globally, then clean the cache
RUN npm install -g html-minifier && npm cache clean --force

# Create and activate a virtual environment for Python dependencies
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Install all dependencies (build and runtime)
COPY requirements.txt requirements-build.txt ./
RUN pip install --no-cache-dir -r requirements.txt -r requirements-build.txt

# Copy the full application source code for the build process
COPY . .

# --- Minify Static Assets ---
RUN \
    echo "Minifying JavaScript files..."; \
    find app/static/js -name '*.js' -exec sh -c 'python -m rjsmin < "$0" > "$0.tmp" && mv "$0.tmp" "$0"' {} \; && \
    \
    echo "Minifying CSS files..."; \
    find app/static/css -name '*.css' -exec sh -c 'python -m rcssmin < "$0" > "$0.tmp" && mv "$0.tmp" "$0"' {} \; && \
    \
    echo "Minifying HTML files..."; \
    find app/templates -name '*.html' -exec sh -c 'html-minifier --collapse-whitespace --remove-comments --minify-js true --minify-css true -o "$0.tmp" "$0" && mv "$0.tmp" "$0"' {} \;

# --- Clean Build-Time Dependencies ---
# Uninstall the build-only packages to keep the final venv lean
RUN pip uninstall -y -r requirements-build.txt


# ---- Final Stage ----
# Start from a clean, minimal Python image
FROM python:3-slim-bookworm

# Set the application's working directory
WORKDIR /app

# Create a non-root user with a dedicated home directory and a proper shell
RUN addgroup --system nonroot && \
    adduser --system --ingroup nonroot --home /home/nonroot --shell /bin/bash nonroot

# Create a .bashrc file for the non-root user with common aliases
RUN echo "alias ll='ls -alF'" >> /home/nonroot/.bashrc

# Copy the cleaned virtual environment from the builder stage
COPY --from=builder /opt/venv /opt/venv

# --- Copy only the necessary runtime files ---
# Selectively copy the minified app, the gunicorn config, and the startup script
COPY --from=builder /app/app ./app
COPY --from=builder /app/gunicorn_config.py .
COPY --from=builder /app/kuyala_production.sh .

# Make the production script executable
RUN chmod +x kuyala_production.sh

# Set the PATH to use the virtual environment
ENV PATH="/opt/venv/bin:$PATH"

# --- Environment Variables for Runtime Configuration ---
ENV LOG_LEVEL="INFO"
ENV KUBECONFIG=""
ENV KUBECONFIG_CONTENT=""
# --- End Environment Variables ---

# Change ownership of the app directory and home directory
RUN chown -R nonroot:nonroot /app /home/nonroot

# Switch to the non-root user
USER nonroot

# Set the HOME environment variable
ENV HOME=/home/nonroot

# Expose the port the app will run on
EXPOSE 5000

# Define the command to run the application
CMD ["./kuyala_production.sh"]
