# ---- Builder Stage ----
# Use the latest slim Python 3 image and add Node.js for minification tools
FROM python:3-slim-bookworm AS builder

# Set the working directory
WORKDIR /app

# Install build essentials, Node.js, and npm for asset minification
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# Use npm to install html-minifier globally
RUN npm install -g html-minifier

# Create and activate a virtual environment for Python dependencies
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Install Python dependencies, including rjsmin and rcssmin
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the application source code into the builder stage
COPY . .

# --- Minify Static Assets ---
# This multi-step command finds and minifies all assets in place.
RUN \
    echo "Minifying JavaScript files..."; \
    find app/static/js -name '*.js' -exec sh -c 'python -m rjsmin < "$0" > "$0.tmp" && mv "$0.tmp" "$0"' {} \; && \
    \
    echo "Minifying CSS files..."; \
    find app/static/css -name '*.css' -exec sh -c 'python -m rcssmin < "$0" > "$0.tmp" && mv "$0.tmp" "$0"' {} \; && \
    \
    echo "Minifying HTML files..."; \
    find app/templates -name '*.html' -exec sh -c 'html-minifier --collapse-whitespace --remove-comments --minify-js true --minify-css true -o "$0.tmp" "$0" && mv "$0.tmp" "$0"' {} \;


# ---- Final Stage ----
# Start from a clean, minimal Python image, which doesn't include Node.js or build tools
FROM python:3-slim-bookworm

# Set the application's working directory
WORKDIR /app

# Create a non-root user with a dedicated home directory
RUN addgroup --system nonroot && \
    adduser --system --ingroup nonroot --home /home/nonroot --shell /bin/bash nonroot

# Copy the virtual environment (with dependencies) from the builder stage
COPY --from=builder /opt/venv /opt/venv

# Copy only the minified application code from the builder stage
COPY --from=builder /app /app

# Make the production script executable
RUN chmod +x kuyala_production.sh

# Set the PATH to use the virtual environment
ENV PATH="/opt/venv/bin:$PATH"

# --- Environment Variables for Runtime Configuration ---
# These provide default values that can be overridden at runtime.
ENV LOG_LEVEL="INFO"
ENV KUBECONFIG=""
ENV KUBECONFIG_CONTENT=""
# --- End Environment Variables ---

# Change ownership of the app directory to the non-root user
# Also ensure the home directory is owned by the non-root user
RUN chown -R nonroot:nonroot /app /home/nonroot

# Switch to the non-root user
USER nonroot

# Set the HOME environment variable so 'cd ~' works correctly
ENV HOME=/home/nonroot

# Expose the port the app will run on
EXPOSE 5000

# Define the command to run the application
CMD ["./kuyala_production.sh"]
